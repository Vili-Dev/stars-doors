# ===================================
# Stars Doors - Configuration Example
# ===================================
# Copiez ce fichier en .env et modifiez les valeurs

# Base de données
DB_HOST=localhost
DB_NAME=stars_doors
DB_USER=root
DB_PASS=
DB_PORT=3306

# Site
SITE_URL=http://localhost/stars-doors
SITE_NAME=Stars Doors
ENVIRONMENT=development
DEBUG_MODE=true

# Email (optionnel)
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@starsdoors.com
MAIL_FROM_NAME=Stars Doors

# Admin
ADMIN_EMAIL=admin@starsdoors.com

# Sécurité
SECRET_KEY=change_this_to_a_random_string_in_production
SESSION_LIFETIME=120

# Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# Cache
CACHE_ENABLED=false
CACHE_TTL=3600

# Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Site en maintenance. Retour bientôt.

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# API Keys (si nécessaire)
GOOGLE_MAPS_API_KEY=
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=
